<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_barber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="45dp"
                app:cardElevation="0dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/img_barber_avt"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_avatar" />
            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_barber_info"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_barber_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="David"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary" />

                    <RatingBar
                        android:id="@+id/rtb_barber"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:progressTint="@color/colorAccent2"
                        android:secondaryProgressTint="@color/colorAccent2"
                        android:rating="5"
                        android:numStars="5"
                        android:max="5" />

                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/tv_rating_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="123 rating"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent2" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_barber_profile"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:text="Profile"/>

            </RelativeLayout>



        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>